generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid())
  username      String        @unique
  email         String        @unique
  password      String
  deviceId      String
  balance       Float         @default(0)
  transactionId String?
  friends       Friend?
  shop          Restaurant[]
  transaction   Transaction[]
  Payment       Payment[]

  @@unique([username, password])
}

model Friend {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])
}

model Restaurant {
  id          String        @id @default(uuid())
  name        String        @unique
  location    String        @unique
  ownerId     String
  owner       User          @relation(fields: [ownerId], references: [id])
  Transaction Transaction[]
  Payment     Payment[]

  @@index([ownerId], map: "Restaurant_ownerId_fkey")
}

model Transaction {
  id             String     @id @default(uuid())
  amount         Float
  remainder      Float
  isCompleted    Boolean
  name           Restaurant @relation(fields: [restaurantName], references: [name])
  restaurantName String
  people         User[]
}

model Payment {
  id           String     @id @default(uuid())
  amount       Float
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  isCompleted  Boolean
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  restaurantId String
}
